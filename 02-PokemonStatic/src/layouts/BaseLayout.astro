---
interface Props {
    title: string;
}

import { ClientRouter } from "astro:transitions";

const {title} = Astro.props;

import "../styles/global.css";
import Navbar from "@components/Navbar.astro";
---

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>{title}</title>
    <ClientRouter />
</head>
<body class="bg-blue-950 text-slate-100 flex flex-col min-h-screen">
    <Navbar />
    <main class="mt-1 mx-auto flex-grow w-full max-w-4xl px-4">
        <slot />
    </main>
</body>
</html>